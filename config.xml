<?xml version='1.0' encoding='utf-8'?>
<widget id="com.usinaPIM.SiMOR" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SiMOR</name>
    <description>
        El Sistema Movil para la Observación de Rio (SiMOR) tiene como propósito
        proveer información útil y certera, de fácil acceso y lectura que pudiera
        servir para alertar a la población sobre el nivel de los ríos en las zonas
        costeras de las Provincias de Misiones y Corrientes.
    </description>
    <author email="usinapim@gmail.com" href="http://fundacionpim.com.ar">
        usinaPIM
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="ios">
          <splash src="res/screen/ios/splash-2.png" width="768" height="1280"/>
          <!-- iOS 8.0+ -->
          <!-- iPhone 6 Plus  -->
          <icon src="res/ios/AppIcon.appiconset/icon-60@3x.png" width="180" height="180" />
          <!-- iOS 7.0+ -->
          <!-- iPhone / iPod Touch  -->
          <icon src="res/ios/icon-60.png" width="60" height="60" />
          <icon src="res/ios/AppIcon.appiconset/icon-60@2x.png" width="120" height="120" />
          <!-- iPad -->
          <icon src="res/ios/AppIcon.appiconset/icon-76.png" width="76" height="76" />
          <icon src="res/ios/AppIcon.appiconset/icon-76@2x.png" width="152" height="152" />
          <!-- iOS 6.1 -->
          <!-- Spotlight Icon -->
          <icon src="res/ios/AppIcon.appiconset/icon-40.png" width="40" height="40" />
          <icon src="res/ios/AppIcon.appiconset/icon-40@2x.png" width="80" height="80" />
          <!-- iPhone / iPod Touch -->
          <icon src="res/ios/icon.png" width="57" height="57" />
          <icon src="res/ios/icon@2x.png" width="114" height="114" />
          <!-- iPad -->
          <icon src="res/ios/icon-72.png" width="72" height="72" />
          <icon src="res/ios/icon-72@2x.png" width="144" height="144" />
          <!-- iPhone Spotlight and Settings Icon -->
          <icon src="res/ios/AppIcon.appiconset/icon-small.png" width="29" height="29" />
          <icon src="res/ios/AppIcon.appiconset/icon-small@2x.png" width="58" height="58" />
          <!-- iPad Spotlight and Settings Icon -->
          <icon src="res/ios/icon-Small-50.png" width="50" height="50" />
          <icon src="res/ios/icon-Small-50@2x.png" width="100" height="100" />
    </platform>
    <platform name="android">
        <allow-intent href="market:*" />
        <splash density="land-hdpi" src="res/screen/android/splash-1.png" />
        <splash density="land-ldpi" src="res/screen/android/splash-1.png" />
        <splash density="land-mdpi" src="res/screen/android/splash-1.png" />
        <splash density="land-xhdpi" src="res/screen/android/splash-1.png" />
        <splash density="port-hdpi" src="res/screen/android/splash-1.png" />
        <splash density="port-ldpi" src="res/screen/android/splash-1.png" />
        <splash density="port-mdpi" src="res/screen/android/splash-1.png" />
        <splash density="port-xhdpi" src="res/screen/android/splash-1.png" />

        <splash density="land-hdpi" src="res/screen/android/splash-2.png" />
        <splash density="land-ldpi" src="res/screen/android/splash-2.png" />
        <splash density="land-mdpi" src="res/screen/android/splash-2.png" />
        <splash density="land-xhdpi" src="res/screen/android/splash-2.png" />
        <splash density="port-hdpi" src="res/screen/android/splash-2.png" />
        <splash density="port-ldpi" src="res/screen/android/splash-2.png" />
        <splash density="port-mdpi" src="res/screen/android/splash-2.png" />
        <splash density="port-xhdpi" src="res/screen/android/splash-2.png" />

        <icon density="ldpi" src="res/android/ic_launcher/res/mipmap-mdpi/ic_launcher.png" />
        <icon density="mdpi" src="res/android/ic_launcher/res/mipmap-mdpi/ic_launcher.png" />
        <icon density="hdpi" src="res/android/ic_launcher/res/mipmap-hdpi/ic_launcher.png" />
        <icon density="xhdpi" src="res/android/ic_launcher/res/mipmap-xhdpi/ic_launcher.png" />

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

</widget>
