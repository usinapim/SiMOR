<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="org.pim.simor" version="2.0.0">
    <name>SiMOR</name>
    <description>
        El Sistema Movil para la Observación de Rio (SiMOR) tiene como propósito
        proveer información útil y certera, de fácil acceso y lectura que pudiera
        servir para alertar a la población sobre el nivel de los ríos en las zonas
        costeras de las Provincias de Misiones y Corrientes.
    </description>
    <author email="usinapim@gmail.com" href="http://fundacionpim.com.ar">
        usinaPIM
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <preference name="android-build-tool" value="gradle"/>
    <plugin name="phonegap-plugin-push" source="npm">
        <variable name="SENDER_ID" value="835325767417"/>
    </plugin>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="ios">
          <splash height="1280" src="res/screen/ios/splash-2.png" width="768"/>
          <!-- iOS 8.0+ -->
          <!-- iPhone 6 Plus  -->
          <icon height="180" src="res/ios/AppIcon.appiconset/icon-60@3x.png" width="180"/>
          <!-- iOS 7.0+ -->
          <!-- iPhone / iPod Touch  -->
          <icon height="60" src="res/ios/icon-60.png" width="60"/>
          <icon height="120" src="res/ios/AppIcon.appiconset/icon-60@2x.png" width="120"/>
          <!-- iPad -->
          <icon height="76" src="res/ios/AppIcon.appiconset/icon-76.png" width="76"/>
          <icon height="152" src="res/ios/AppIcon.appiconset/icon-76@2x.png" width="152"/>
          <!-- iOS 6.1 -->
          <!-- Spotlight Icon -->
          <icon height="40" src="res/ios/AppIcon.appiconset/icon-40.png" width="40"/>
          <icon height="80" src="res/ios/AppIcon.appiconset/icon-40@2x.png" width="80"/>
          <!-- iPhone / iPod Touch -->
          <icon height="57" src="res/ios/icon.png" width="57"/>
          <icon height="114" src="res/ios/icon@2x.png" width="114"/>
          <!-- iPad -->
          <icon height="72" src="res/ios/icon-72.png" width="72"/>
          <icon height="144" src="res/ios/icon-72@2x.png" width="144"/>
          <!-- iPhone Spotlight and Settings Icon -->
          <icon height="29" src="res/ios/AppIcon.appiconset/icon-small.png" width="29"/>
          <icon height="58" src="res/ios/AppIcon.appiconset/icon-small@2x.png" width="58"/>
          <!-- iPad Spotlight and Settings Icon -->
          <icon height="50" src="res/ios/icon-Small-50.png" width="50"/>
          <icon height="100" src="res/ios/icon-Small-50@2x.png" width="100"/>
    </platform>
    <platform name="android">
        <allow-intent href="market:*"/>
        <splash density="land-hdpi" src="res/screen/android/splash-1.png"/>
        <splash density="land-ldpi" src="res/screen/android/splash-1.png"/>
        <splash density="land-mdpi" src="res/screen/android/splash-1.png"/>
        <splash density="land-xhdpi" src="res/screen/android/splash-1.png"/>
        <splash density="port-hdpi" src="res/screen/android/splash-1.png"/>
        <splash density="port-ldpi" src="res/screen/android/splash-1.png"/>
        <splash density="port-mdpi" src="res/screen/android/splash-1.png"/>
        <splash density="port-xhdpi" src="res/screen/android/splash-1.png"/>

        <splash density="land-hdpi" src="res/screen/android/splash-2.png"/>
        <splash density="land-ldpi" src="res/screen/android/splash-2.png"/>
        <splash density="land-mdpi" src="res/screen/android/splash-2.png"/>
        <splash density="land-xhdpi" src="res/screen/android/splash-2.png"/>
        <splash density="port-hdpi" src="res/screen/android/splash-2.png"/>
        <splash density="port-ldpi" src="res/screen/android/splash-2.png"/>
        <splash density="port-mdpi" src="res/screen/android/splash-2.png"/>
        <splash density="port-xhdpi" src="res/screen/android/splash-2.png"/>

        <icon density="ldpi" src="res/android/ic_launcher/res/mipmap-mdpi/ic_launcher.png"/>
        <icon density="mdpi" src="res/android/ic_launcher/res/mipmap-mdpi/ic_launcher.png"/>
        <icon density="hdpi" src="res/android/ic_launcher/res/mipmap-hdpi/ic_launcher.png"/>
        <icon density="xhdpi" src="res/android/ic_launcher/res/mipmap-xhdpi/ic_launcher.png"/>

    </platform>


    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>

    <hook src="scripts/copy_resource_files.js" type="before_build"/>

</widget>
